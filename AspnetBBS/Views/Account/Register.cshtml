@model AspnetBBS.Models.User
<div class="text-center"><h2>REGISTER</h2></div>
<div class="imgcontainer">
    <img src="~/images/register_logo.jpg" alt="avatar" class="avatar">
</div>
<form class="form-horizontal" method="post" id="loginForm" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="Please enter your ID" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" placeholder="Please enter your password" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="Please enter your name" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="form-group" align="center" id="btn-padding-bt">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-warning" onclick="resetForm();">Reset</a>
    </div>
</form>
