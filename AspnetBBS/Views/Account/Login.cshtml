@model AspnetBBS.ViewModel.LoginViewModel

<div class="text-center"><h2>LOGIN</h2></div>
<div class="imgcontainer">
    <img src="~/images/login_logo.jpg" alt="avatar" class="avatar">
</div>
<form class="form-horizontal" id="loginForm" method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly" />
    <div class="form-group">
        <label>User ID</label>
        <input type="text" asp-for="UserId" class="form-control" placeholder="Enter user ID" />
        <span class="text-danger" asp-validation-for="UserId" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="UserPassword" class="form-control" placeholder="Enter password" />
        <span class="text-danger" asp-validation-for="UserPassword" />
    </div>
    <div class="form-group" align="center" id="btn-padding-bt">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>